.banner {
  height: 250rpx;
  background: linear-gradient(#222, #555);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.banner image {
  width: 120rpx;
  height: 120rpx;
}

.banner text {
  font-weight: bold;
  color: #fff;
  font-size: 38rpx;
  margin-top: 20rpx;
}