.page-container {
  box-sizing: border-box;
  background: #efefef;
  min-height: 100vh;
  overflow: hidden;
}

.page-title {
  height: 100rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  color: rgb(16, 142, 233);
}

button {
  margin-bottom: 10px;
}

.card {
  margin: 15px 10px;
  padding: 10px;
  border-radius: 4px;
  background: #fff;
}

.card .card-title {
  font-size: 16px;
  line-height: 2;
  display: block;
}

.card .card-comments {
  font-size: 26rpx;
  line-height: 1.8;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

